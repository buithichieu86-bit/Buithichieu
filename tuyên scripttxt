-- LocalScript (đặt trong StarterPlayer > StarterPlayerScripts) -- Phiên bản tối ưu cho điện thoại: nút to, màu đỏ, có icon, banner góc phải ghi "tuyên vip" -- Tính năng: Bay, Teleport, Chạy nhanh -- Hoàn toàn an toàn (client-side)

local Players = game:GetService("Players") local RunService = game:GetService("RunService") local UserInputService = game:GetService("UserInputService") local player = Players.LocalPlayer

-- Giao diện chính local screenGui = Instance.new("ScreenGui") screenGui.Name = "TuyenVIPGUI" screenGui.ResetOnSpawn = false screenGui.Parent = player:WaitForChild("PlayerGui")

-- Banner đỏ góc phải local banner = Instance.new("Frame") banner.Size = UDim2.new(0, 180, 0, 60) banner.Position = UDim2.new(1, -10, 0, 10) banner.AnchorPoint = Vector2.new(1, 0) banner.BackgroundColor3 = Color3.fromRGB(200, 0, 0) banner.BorderSizePixel = 0 banner.Parent = screenGui local bannerCorner = Instance.new("UICorner", banner) bannerCorner.CornerRadius = UDim.new(0, 10)

local title = Instance.new("TextLabel") title.Size = UDim2.new(1, -10, 0, 30) title.Position = UDim2.new(0, 10, 0, 5) title.BackgroundTransparency = 1 title.Text = "tuyên vip" title.Font = Enum.Font.GothamBold title.TextSize = 20 title.TextColor3 = Color3.fromRGB(255,255,255) title.TextXAlignment = Enum.TextXAlignment.Left title.Parent = banner

-- Biểu tượng (icon) nhỏ trong banner local icon = Instance.new("ImageLabel") icon.Size = UDim2.new(0, 32, 0, 32) icon.Position = UDim2.new(1, -40, 0, 10) icon.BackgroundTransparency = 1 icon.Image = "rbxassetid://6035031075" -- icon ngôi sao icon.Parent = banner

-- Frame chính chứa nút local mainFrame = Instance.new("Frame") mainFrame.Size = UDim2.new(0, 250, 0, 220) mainFrame.Position = UDim2.new(0, 10, 1, -230) mainFrame.AnchorPoint = Vector2.new(0, 0) mainFrame.BackgroundColor3 = Color3.fromRGB(40,0,0) mainFrame.BackgroundTransparency = 0.1 mainFrame.BorderSizePixel = 0 mainFrame.Parent = screenGui local mainCorner = Instance.new("UICorner", mainFrame) mainCorner.CornerRadius = UDim.new(0,15)

-- Hàm tạo nút to local function createButton(text, iconId, posY) local btn = Instance.new("TextButton") btn.Size = UDim2.new(1, -20, 0, 60) btn.Position = UDim2.new(0, 10, 0, posY) btn.BackgroundColor3 = Color3.fromRGB(200,0,0) btn.Font = Enum.Font.GothamBold btn.TextSize = 18 btn.TextColor3 = Color3.fromRGB(255,255,255) btn.Text = "  " .. text btn.TextXAlignment = Enum.TextXAlignment.Left btn.Parent = mainFrame local corner = Instance.new("UICorner", btn) corner.CornerRadius = UDim.new(0,10)

local img = Instance.new("ImageLabel")
img.Size = UDim2.new(0,40,0,40)
img.Position = UDim2.new(0,10,0.5,-20)
img.BackgroundTransparency = 1
img.Image = iconId
img.Parent = btn

return btn

end

-- Tạo nút local flyBtn = createButton("Bay", "rbxassetid://6034509993", 20) local tpBtn = createButton("Dịch chuyển", "rbxassetid://6035000461", 90) local speedBtn = createButton("Chạy nhanh", "rbxassetid://6034970612", 160)

-- Các biến và chức năng local flying = false local flySpeed = 50 local connection local flyVelocity, flyGyro

local function startFly() local char = player.Character if not char or not char.PrimaryPart then return end local hrp = char.PrimaryPart flying = true flyVelocity = Instance.new("BodyVelocity") flyVelocity.MaxForce = Vector3.new(1e5, 1e5, 1e5) flyVelocity.Parent = hrp flyGyro = Instance.new("BodyGyro") flyGyro.MaxTorque = Vector3.new(4e5, 4e5, 4e5) flyGyro.CFrame = hrp.CFrame flyGyro.Parent = hrp

connection = RunService.Heartbeat:Connect(function(dt)
	if not flying or not hrp then return end
	local cam = workspace.CurrentCamera
	local dir = cam.CFrame.LookVector
	flyVelocity.Velocity = dir * flySpeed
	flyGyro.CFrame = cam.CFrame
end)

end

local function stopFly() flying = false if connection then connection:Disconnect() end if flyVelocity then flyVelocity:Destroy() end if flyGyro then flyGyro:Destroy() end end

flyBtn.MouseButton1Click:Connect(function() if flying then stopFly() flyBtn.Text = "  Bay" else startFly() flyBtn.Text = "  Đang bay" end end)

tpBtn.MouseButton1Click:Connect(function() local others = Players:GetPlayers() for _, p in ipairs(others) do if p ~= player and p.Character and p.Character.PrimaryPart and player.Character and player.Character.PrimaryPart then player.Character:SetPrimaryPartCFrame(p.Character.PrimaryPart.CFrame + Vector3.new(0,3,0)) break end end end)

local speedLevels = {16,32,50,100} local idx = 1 speedBtn.MouseButton1Click:Connect(function() idx = idx % #speedLevels + 1 local char = player.Character if char and char:FindFirstChildOfClass("Humanoid") then char:FindFirstChildOfClass("Humanoid").WalkSpeed = speedLevels[idx] end speedBtn.Text = "  Chạy: "..speedLevels[idx] end)

player.CharacterAdded:Connect(function(char) wait(0.2) if char:FindFirstChildOfClass("Humanoid") then char:FindFirstChildOfClass("Humanoid").WalkSpeed = speedLevels[idx] end end)

-- Hoàn tất
